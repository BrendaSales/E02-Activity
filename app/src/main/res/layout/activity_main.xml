<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mensagemUser"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:layout_marginTop="100dp"
        android:text="UsuÃ¡rio:"
        />

    <EditText
        android:id="@+id/txt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mensagemUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mensagemSenha"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_user"
        android:textSize="24dp"
        android:text="Senha:"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_mensagemSenha"
        android:id="@+id/txt_senha"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_senha"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:id="@+id/btn_fazerLogin"
        />



</RelativeLayout>